[Unit]
Description=Address Validator (FastAPI)
After=network.target

[Service]
Type=simple
User=exedev
WorkingDirectory=/home/exedev/address-validator
ExecStart=/home/exedev/address-validator/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
